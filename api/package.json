{
  "name": "hatsuportal-api",
  "version": "0.0.1",
  "description": "API Service for HatsuPortal Application",
  "main": "server.js",
  "dependencies": {
    "@ruanmartinelli/knex-model": "^0.3.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.8",
    "lodash": "^4.17.15",
    "moment": "^2.29.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.17.1",
    "swagger-ui-express": "^4.1.3",
    "tsoa": "^2.5.13"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "npm run clean && npm run lint && npm run test && npm run swagger-gen && npm run routes-gen && npm run tsc",
    "coverage": "npm run test-cov && npm run test-remap",
    "postinstall": "npm run build",
    "test": "jest --config jest.json --no-cache",
    "tsc": "tsc --project tsconfig.json",
    "tsc:watch": "tsc -w",
    "start": "nodemon",
    "start:prod": "node ./dist/server.js",
    "clean": "rimraf dist",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "tsoa": "tsoa",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "api"
  ],
  "author": "Lassemon",
  "license": "MIT",
  "devDependencies": {
    "@types/api-error-handler": "^1.0.32",
    "@types/body-parser": "^1.17.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/knex": "^0.16.1",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.13.0",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/pg": "^7.14.1",
    "@types/swagger-ui-express": "^4.1.1",
    "husky": "^4.1.0",
    "jest": "^24.9.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.3.0",
    "ts-mockito-2": "^2.2.8",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.7.5"
  }
}
